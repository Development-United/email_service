# Email Service Configuration Template
# Copy this file to .env and fill in your values

# ==============================================================================
# SMTP Configuration
# ==============================================================================
EMAIL_PASSWORD=your_email_app_password_here
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your_email@domain.com
SENDER_NAME=Your Company Name

# ==============================================================================
# Application Configuration
# ==============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=text

# ==============================================================================
# API Configuration
# ==============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# ==============================================================================
# CORS Configuration
# ==============================================================================
# Comma-separated list of allowed origins
# Use ["*"] for all origins (not recommended for production)
CORS_ORIGINS=["http://localhost:3000","https://yourdomain.com"]

# ==============================================================================
# Rate Limiting
# ==============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# ==============================================================================
# Email Service Settings
# ==============================================================================
EMAIL_TEMPLATE_PATH=email_template.html
EMAIL_TIMEOUT=30
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_DELAY=2

# ==============================================================================
# Security (Optional)
# ==============================================================================
# Comma-separated list of allowed IP addresses (empty = all allowed)
# ALLOWED_IP_ADDRESSES=["192.168.1.1","10.0.0.1"]
